<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context="com.example.azio.phasemapv101.ContinueSearchActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:background="#fff"
        android:layout_margin="10dp">

        <Button
            android:text="Your Location"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/userLocation"
            android:background="#fff"/>

        <Button
            android:text="Choose Destination"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/userLocation"
            android:layout_alignLeft="@+id/userLocation"
            android:layout_alignStart="@+id/userLocation"
            android:id="@+id/button3"
            android:background="#fff"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:text="Recent History"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:background="#fff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="10dp"
            android:text="From Favorites" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"/>

    </LinearLayout>
    
</RelativeLayout>
